    <script>
        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
            document.getElementById('mobile-menu').classList.add('hidden');
        }

        function toggleMobileMenu() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        }

        const terminalOutput = document.getElementById('terminal-output');
        const logs = [
            "[INFO] Initializing DTD Layer Stack...",
            "[INFO] Dimensional Partitioning: 4x192 activated.",
            "[STREAM-1] Ingress: Network_Telemetry.log",
            "[STREAM-2] Ingress: Access_Control.db",
            "[STREAM-3] Ingress: Application_Traces",
            "[FUSION] Head 0 detecting cross-stream correlation...",
            "[FUSION] Learned Conflict Resolution engaged.",
            "[SUCCESS] Unified Inference complete: 164.2ms",
            "-------------------------------------------"
        ];
        let logIndex = 0;
        setInterval(() => {
            const p = document.createElement('p');
            p.textContent = `> ${logs[logIndex % logs.length]}`;
            p.className = 'mb-1';
            terminalOutput.appendChild(p);
            terminalOutput.scrollTop = terminalOutput.scrollHeight;
            logIndex++;
        }, 1500);

        window.onload = () => {
            const ctx = document.getElementById('latencyChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Sequential', 'Middleware', 'DTD System'],
                    datasets: [{
                        label: 'Latency (ms)',
                        data: [255, 300, 166],
                        backgroundColor: ['#cbd5e1', '#94a3b8', '#2563eb'],
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true, title: { display: true, text: 'Milliseconds' } } }
                }
            });
        };

        function runSim(type) {
            const status = document.getElementById('sim-status');
            const log = document.getElementById('sim-log');
            log.innerHTML = '';
            status.textContent = "Processing Streams...";
            
            setTimeout(() => {
                if(type === 'agreement') {
                    status.textContent = "VERIFIED: AGREE";
                    status.className = "text-green-400 font-mono mb-4 text-lg";
                    log.innerHTML = "S1: User detected at Terminal A<br>S2: Terminal A Bio-metrics match User<br>FUSION: High-confidence identity confirmed.";
                } else {
                    status.textContent = "ALERT: CONTRADICTION";
                    status.className = "text-red-400 font-mono mb-4 text-lg";
                    log.innerHTML = "S1: Terminal login successful<br>S2: User location GPS reports 50mi away<br>FUSION: Anomaly detected. Resolving to security lock.";
                }
            }, 800);
        }
    </script>
